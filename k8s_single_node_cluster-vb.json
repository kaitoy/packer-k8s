{
  "builders": [
    {
      "name": "k8s-single-node-cluster",
      "type": "virtualbox-iso",
      "guest_os_type": "Oracle_64",
      "iso_urls": [
        "{{ user `iso_url` }}"
      ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "communicator": "ssh",
      "ssh_timeout": "1000s",
      "ssh_username": "root",
      "ssh_password": "hitachi",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "vboxmanage": [
        [
          "modifyvm",
          "{{ .Name }}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--cpus",
          "{{ user `cpus` }}"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--nic1",
          "nat"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--natdnshostresolver1",
          "on"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--natpf1",
          "SSH,tcp,,2222,,22"
        ],
        [
          "modifyvm",
          "{{ .Name }}",
          "--natpf1",
          "HTTPS,tcp,,443,,443"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `vm_name` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_url": "{{ user `guest_additions_url` }}",
      "guest_additions_sha256": "{{ user `guest_additions_sha256` }}",
      "guest_additions_mode": "upload",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "http",
      "boot_command": [
        "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "15s",
      "output_directory": "builds/packer-{{ user `vm_name` }}-virtualbox",
      "export_opts": [
        "--manifest",
        "--vsys", "0",
        "--ovf20",
        "--product", "{{ user `vm_product `}}",
        "--producturl", "{{ user `vm_producturl `}}",
        "--vendor", "{{ user `vm_vendor` }}",
        "--description", "{{ user `vm_description `}}",
        "--version", "{{ user `vm_version` }}"
      ],
      "format": "ova"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "ansible-k8s/k8s_single_node_cluster.yml",
      "inventory_file": "./ansible_inventory",
      "ansible_env_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False",
        "ANSIBLE_SSH_ARGS='-o ControlMaster=no -o ControlPersist=60s'",
        "ANSIBLE_NOCOLOR=True"
      ],
      "extra_arguments": [
        "--extra-vars", "'@extra_vars.yml'"
      ],
      "sftp_command": "/usr/lib/ssh/sftp-server -e"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh",
        "bento/_common/minimize.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "builds/k8s-master.box",
      "keep_input_artifact": true
    }
  ]
}
